<Window x:Class="HelloWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d" 
        Title="MainWindow" Height="450" Width="800" Background="Salmon">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="txtName" Grid.Row="0" Grid.Column="0" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0"></TextBox>
        <TextBox Name="textBox" Grid.Row="0" Grid.Column="1" Width="200" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" TextWrapping="Wrap"  />
        <Button Click="Button_Click" Content="button" Grid.Row="0" Grid.Column="1" Width="140" Height="35" Foreground="Blue"></Button>

    </Grid>
</Window>
